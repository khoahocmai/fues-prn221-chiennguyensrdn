@page
@model fues_prn221_chiennguyensrdn.Pages.Seller.ManageER.HIstoryExchangeRequestModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Seller")]
@{
    ViewData["Title"] = "History Exchange Request";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 30px;
            max-width: 1200px;
        }

        h2 {
            margin-bottom: 30px;
            color: #333;
            text-align: center;
            font-weight: bold;
        }

        .table {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

            .table th, .table td {
                vertical-align: middle;
            }

            .table th {
                background-color: #007bff;
                color: #fff;
                border-top: none;
            }

            .table tbody tr:hover {
                background-color: #f1f1f1;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Requester</th>
                    <th>Status</th>
                    <th>Message</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exchangeRequest in Model.ExchangeRequests)
                {
                    <tr>
                        <td>@exchangeRequest.Product?.Title</td>
                        <td>@exchangeRequest.Requester?.Name</td>
                        <td>@exchangeRequest.Status</td>
                        <td>@exchangeRequest.Message</td>
                        <td>@exchangeRequest.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@exchangeRequest.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

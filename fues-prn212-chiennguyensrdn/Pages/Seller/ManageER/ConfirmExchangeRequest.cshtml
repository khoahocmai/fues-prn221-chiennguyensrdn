@page "{exchangeRequestId:int}/{productId:int}"
@model fues_prn221_chiennguyensrdn.Pages.Seller.ManageER.ConfirmExchangeRequestModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Seller")]
@{
    ViewData["Title"] = "Confirm Exchange Request";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Exchange Request Details: </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>Product</strong>
        </dt>
        <dd class="col-sm-10">
            @if (Model.ExchangeRequest.Product != null)
            {
                @Model.ExchangeRequest.Product.Title
            }
        </dd>
        <dt class="col-sm-2">
            <strong>Requester</strong>
        </dt>
        <dd class="col-sm-10">
            @if (Model.ExchangeRequest.Requester != null)
            {
                @Model.ExchangeRequest.Requester.Name
            }
        </dd>
        <dt class="col-sm-2">
            <strong>Status</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.ExchangeRequest.Status
        </dd>
        <dt class="col-sm-2">
            <strong>Message</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.ExchangeRequest.Message
        </dd>
        <dt class="col-sm-2">
            <strong>Created At</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.ExchangeRequest.CreatedAt.ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-2">
            <strong>Updated At</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.ExchangeRequest.UpdatedAt.ToString("yyyy-MM-dd HH:mm")
        </dd>
    </dl>
</div>

<div>
    <form method="post">
        <input type="hidden" asp-for="ExchangeRequest.Id" />
        <input type="hidden" asp-for="ProductId" />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Approve this guy</button>
            <a asp-page="/Seller/ManageER/ExchangeRequest" class="btn btn-secondary">Back to Exchange Requests</a>
        </div>
    </form>
</div>

@page "{id:int}"
@model fues_prn221_chiennguyensrdn.Pages.Seller.ManageProduct.DeleteProductModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Seller")]
@{
    ViewData["Title"] = "Delete Product";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this product?</h4>

<dl class="row">
    <dt class="col-sm-2">
        Title
    </dt>
    <dd class="col-sm-10">
        @Model.Product.Title
    </dd>
    <dt class="col-sm-2">
        Description
    </dt>
    <dd class="col-sm-10">
        @Model.Product.Description
    </dd>
    <dt class="col-sm-2">
        Price
    </dt>
    <dd class="col-sm-10">
        @Model.Product.Price
    </dd>
    <dt class="col-sm-2">
        Category
    </dt>
    <dd class="col-sm-10">
        @Model.Product.Category.Name
    </dd>
</dl>

<!-- Button to trigger modal -->
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
    Delete
</button>
<a asp-page="/Seller/ManageProduct/ViewProduct" class="btn btn-secondary">Back to List</a>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this product? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>


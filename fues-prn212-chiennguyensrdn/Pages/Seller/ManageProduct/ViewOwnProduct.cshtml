@page
@model fues_prn221_chiennguyensrdn.Pages.Seller.ManageProduct.ViewOwnProductModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Seller")]
@{
    ViewData["Title"] = "View Product";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@string.Format("{0:N2} Đ", product.Price)</td>
                <td>@product.Category?.Name</td>
                <td>@product.Status</td>
                <td>@product.CreatedAt</td>
                <td>@product.UpdatedAt</td>
                <td>
                    @if (product.Image != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(product.Image)" alt="@product.Title" style="max-width: 100px; max-height: 100px;" />
                    }
                </td>
                <td>
                    <a asp-page="/Seller/ManageProduct/EditProduct" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="/Seller/ManageProduct/DeleteProduct" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    <a asp-page="/Seller/ManageProduct/ViewProductDetail" asp-route-id="@product.Id" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <form asp-page="/Seller/ManageProduct/CreateProduct" method="get">
        <button type="submit" class="btn btn-primary">Create New Product</button>
    </form>
</div>


@page
@model fues_prn221_chiennguyensrdn.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="reset-password-container">
    <h3>@ViewData["Title"]</h3>
    <hr />
    <form method="post" class="reset-password-form">
        <input type="hidden" asp-for="Token" />
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">New Password</label>
            <input asp-for="NewPassword" type="password" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Reset Password" class="btn btn-primary btn-block" />
        </div>
        @if (Model.PasswordReset)
        {
            <div class="alert alert-success">Your password has been successfully reset.</div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .reset-password-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

        .reset-password-container h3 {
            margin-bottom: 20px;
            text-align: center;
            color: #333;
        }

    .reset-password-form .form-group {
        margin-bottom: 15px;
    }

    .reset-password-form .form-control {
        border-radius: 5px;
        padding: 10px;
        font-size: 16px;
    }

    .reset-password-form .btn {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
    }

    .reset-password-form .text-danger {
        font-size: 14px;
    }
</style>

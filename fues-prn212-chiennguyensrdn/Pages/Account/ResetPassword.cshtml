@page
@model fues_prn221_chiennguyensrdn.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    ViewData["HideHeaderAndFooter"] = true; // Hide header and footer
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="reset-password-container position-relative">
        <a href="/" class="close-button" aria-label="Close">&times;</a>
        <h3>@ViewData["Title"]</h3>
        <hr />
        <form method="post" class="reset-password-form">
            <input type="hidden" asp-for="Token" />
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Reset Password" class="btn btn-primary btn-block" />
            </div>
            @if (Model.PasswordReset)
            {
                <div class="alert alert-success mt-3">Your password has been successfully reset.</div>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .reset-password-container {
        max-width: 400px;
        width: 100%;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        position: relative;
    }

    .close-button {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        text-decoration: none;
        color: #000;
    }

        .close-button:hover {
            color: #f00;
        }

    .reset-password-container h3 {
        margin-bottom: 20px;
        font-weight: bold;
    }

    .reset-password-form .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    .reset-password-form .form-control {
        border-radius: 0;
        border: none;
        border-bottom: 2px solid #ccc;
        padding: 10px;
        font-size: 16px;
    }

        .reset-password-form .form-control:focus {
            border-bottom: 2px solid #6a11cb;
            box-shadow: none;
        }

    .reset-password-form .btn {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 50px;
        background-color: #fff;
        color: #000;
        border: 1px solid #ccc;
    }

        .reset-password-form .btn:hover {
            background-color: #f1f1f1;
        }

    .reset-password-form .text-danger {
        font-size: 14px;
    }
</style>

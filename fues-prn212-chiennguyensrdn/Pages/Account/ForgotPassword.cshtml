@page
@model fues_prn221_chiennguyensrdn.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="forgot-password-container">
    <h3>@ViewData["Title"]</h3>
    <hr />
    <form method="post" class="forgot-password-form">
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Send Reset Link" class="btn btn-primary btn-block" />
        </div>
        @if (Model.EmailSent)
        {
            <div class="alert alert-success">Reset link sent to your email address.</div>
        }
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .forgot-password-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

        .forgot-password-container h3 {
            margin-bottom: 20px;
            text-align: center;
            color: #333;
        }

    .forgot-password-form .form-group {
        margin-bottom: 15px;
    }

    .forgot-password-form .form-control {
        border-radius: 5px;
        padding: 10px;
        font-size: 16px;
    }

    .forgot-password-form .btn {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
    }

    .forgot-password-form .text-danger {
        font-size: 14px;
    }
</style>
